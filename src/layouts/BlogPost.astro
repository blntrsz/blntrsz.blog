---
import BlogPost from '../components/BlogPost.astro';
import BaseLayout from './BaseLayout.astro';

const {
	content: {
		title,
		description,
		publishDate,
		author,
		heroImage,
		permalink,
		alt
	}
} = Astro.props;
---

<BaseLayout hasPrism={true} {title} {description} {permalink}>
	<BlogPost {title} {author} {heroImage} {publishDate} {alt}>
		<slot />
	</BlogPost>
</BaseLayout>